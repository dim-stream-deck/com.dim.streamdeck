{
  /* Prefer tabs over spaces for accessibility */
  "editor.insertSpaces": false,
  "editor.detectIndentation": false,
  /* Explorer */
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, rollup.config.mjs, tsconfig*.json, postcss.config.*"
  },
  "files.exclude": {
    "node_modules": true
  },
  "cSpell.words": [
    "aeeidfelonceeehdppacnjlimhoneige",
    "bungify",
    "classitem",
    "clazz",
    "clipboardy",
    "dawidd",
    "destinyitemmanager",
    "enigo",
    "onwarn",
    "perkname",
    "randomroll",
    "singlefile",
    "typer"
  ]
}
